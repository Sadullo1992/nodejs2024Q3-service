generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String @id @default(uuid())
    login     String
    password  String
    createdAt BigInt
    updatedAt BigInt
    version   Int    @default(1)
}

model Track {
    id       String  @id @default(uuid())
    name     String
    artistId String?
    albumId  String?
    duration Int
    artist   Artist? @relation(fields: [artistId], references: [id])
    album    Album?  @relation(fields: [albumId], references: [id])
}

model Artist {
    id     String  @id @default(uuid())
    name   String
    grammy Boolean
    Track  Track[]
    Album  Album[]
}

model Album {
    id       String  @id @default(uuid())
    name     String
    year     Int
    artistId String?
    Track    Track[]
    artist   Artist? @relation(fields: [artistId], references: [id])
}
